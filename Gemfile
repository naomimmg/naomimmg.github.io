# Gemfile

source "https://rubygems.org"

# Use a modern Jekyll version compatible with the build server's Ruby
gem "jekyll", "~> 4.3.3"

# This is required for Jekyll 4's CSS/Sass processing
gem "jekyll-sass-converter", "~> 2.0"

# This fixes the dependency error with the new version of Ruby
gem "rexml"

# List all your Jekyll plugins here
group :jekyll_plugins do
  gem "jekyll-sitemap"      # From your original file
  gem "jekyll-paginate-v2"  # The modern replacement for pagination
  gem "jekyll-seo-tag"      # A common and useful plugin
end
